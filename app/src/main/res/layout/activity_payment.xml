<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/payment_back">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/main_toolbar"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/payment_back"

            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/arrow_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Оформление заказа"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Centered Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_margin="30dp">

        <!-- Логотип -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_zoo"
            android:contentDescription="Zoo Logo"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp" />

        <!-- Надпись "Сумма к оплате" -->
        <TextView
            android:id="@+id/PaymentCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сумма к оплате: 460 ₽"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:layout_gravity="center" />

        <!-- Блок с полями для ввода данных картыSy -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/payment_back_1"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <!-- Заголовок "Карточки" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Карточкой"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>

            <!-- Поле "Номер карты" -->
            <EditText
                android:id="@+id/cardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Номер карты"
                android:inputType="number"
                android:maxLength="16"
                android:background="@drawable/edit_text_back"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Поля "Месяц/Год" и "CVC/CVV" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/expiryDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Месяц/Год"
                    android:inputType="number"
                    android:maxLength="5"
                    android:background="@drawable/edit_text_back"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/cvc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="CVC/CVV"
                    android:inputType="numberPassword"
                    android:maxLength="3"
                    android:background="@drawable/edit_text_back"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Кнопка "Оплатить" -->
            <Button
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Оплатить"
                android:background="@drawable/button_back_reg"
                android:textColor="@color/black"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Надпись о согласии с условиями -->
        <TextView
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:text="Продолжая, вы соглашаетесь с условиями ПАО ZooБанк"
            android:textSize="12sp"
            android:textColor="#140B0B"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>