<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/koala_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/back2" />

    <View
        android:layout_marginTop="120dp"
        android:id="@+id/rounded_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_back_coala" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/logo_zoo"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/forgot_pas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Забыли парроль?"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <!-- Поле для email -->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/email_input_cont"
        android:layout_width="match_parent"
        android:layout_below="@id/forgot_pas"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/edit_text_back"
        android:orientation="horizontal"
        android:padding="12dp">

        <EditText
            android:id="@+id/email_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Электронная почта"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:textColorHint="#B0000000"
            android:textSize="14sp"
            android:maxLength="30"/>
    </LinearLayout>

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_input_cont"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_back_reg"
        android:padding="12dp"
        android:text="Подтвердить"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Кнопка "Назад" -->
    <TextView
        android:id="@+id/back_link"
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_button"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/arrow_back"
        android:drawablePadding="8dp"
        android:text="Назад"
        android:textColor="@android:color/black"
        android:textSize="14sp" />
</RelativeLayout>