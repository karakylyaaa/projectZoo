<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/koala_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/back2"
        />

    <View
        android:layout_marginTop="120dp"
        android:id="@+id/rounded_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_back_coala" />


    <!-- Логотип -->
    <TextView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/logo_zoo"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Заголовок -->
    <!--<TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Хотите получать специальные\nакции и предложения?"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold" />-->

    <!-- Поля ввода -->
    <LinearLayout
        android:id="@+id/inputs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_back"
            android:orientation="horizontal"
            android:padding="12dp"
            >

            <EditText
                android:id="@+id/email_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Электронная почта"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/black"
                android:textColorHint="#B0000000"
                android:textSize="14sp"
                android:maxLength="30"/>

            <ImageView
                android:id="@+id/email_clear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone"
                android:contentDescription="Очистить" />
        </LinearLayout>

        <!-- Телефон -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_back"
            android:orientation="horizontal"
            android:padding="12dp">

            <EditText
                android:id="@+id/phone_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Номер телефона"
                android:inputType="phone"
                android:textColor="@android:color/black"
                android:textColorHint="#B0000000"
                android:textSize="14sp"
                android:maxLength="30"/>

            <ImageView
                android:id="@+id/phone_clear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone"
                android:contentDescription="Очистить" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_back"
            android:orientation="horizontal"
            android:padding="12dp">

            <EditText
                android:id="@+id/username_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Логин"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textColorHint="#B0000000"
                android:textSize="14sp"
                android:maxLength="30"/>

            <ImageView
                android:id="@+id/username_clear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone"
                android:contentDescription="Очистить" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <!-- Имя -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text_back"
                android:orientation="horizontal"
                android:padding="12dp">

                <EditText
                    android:id="@+id/name_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Имя"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textColorHint="#B0000000"
                    android:textSize="14sp"
                    android:maxLength="20"/>

                <ImageView
                    android:id="@+id/name_clear"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:visibility="gone"
                    android:contentDescription="Очистить" />
            </LinearLayout>

            <!-- Фамилия -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_back"
                android:orientation="horizontal"
                android:padding="12dp">

                <EditText
                    android:id="@+id/surname_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Фамилия"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textColorHint="#B0000000"
                    android:textSize="14sp"
                    android:maxLength="20"/>

                <ImageView
                    android:id="@+id/surname_clear"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:visibility="gone"
                    android:contentDescription="Очистить" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_back"
            android:orientation="horizontal"
            android:padding="12dp">

            <EditText
                android:id="@+id/password_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:textColorHint="#B0000000"
                android:textSize="14sp"
                android:maxLength="30"/>

            <ImageView
                android:id="@+id/password_clear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone"
                android:contentDescription="Очистить" />
        </LinearLayout>
    </LinearLayout>

    <!-- Чекбокс -->
    <CheckBox
        android:id="@+id/terms_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputs_container"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:text="С помощью сервисов 'Зоопарк' получать уведомления и эксклюзивные скидки"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <!-- Кнопка регистрации -->
    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/terms_checkbox"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_back_reg"
        android:padding="12dp"
        android:text="Зарегистрироваться"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Есть аккаунт? -->
    <TextView
        android:id="@+id/login_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:text="Есть аккаунт?"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <!-- Не сейчас -->
    <TextView
        android:id="@+id/not_now_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:text="Не сейчас"
        android:textColor="#B0000000"
        android:textSize="12sp" />
</RelativeLayout>